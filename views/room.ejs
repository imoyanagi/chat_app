<div id="roomTemplate">
    <div class="row p-3 bg-light border">
        <div class="col-3">
            <h5>ルーム名:<span id="roomId" ></span><button class="btn btn-warning ml-3" data-toggle="modal" data-target="#myModal">招待</button></h5>
        </div>
        <div class="col-9">
            <form id="submitMsg">
              <input id="m" autocomplete="off" /><button class="btn btn-secondary ml-3">送信</button>
            </form>
        </div>
    </div>

    <!-- 招待するユーザー表示 -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">ユーザ一覧</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% for(i = 0; i < users.length; i++){ %>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%= users[i] %><button class="inviteUser btn btn-warning ml-4">招待</button></li>
                </ul>
            <% } %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <button type="button" class="btn btn-primary">変更を保存</button>
          </div><!-- /.modal-footer -->
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <ul id="messages" class="list-group list-group-flush" ></ul>
</div>
